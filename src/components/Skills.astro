---
import Skill from "./Skill.astro";
import HTML from "../icons/HTML.astro";
import Javascript from "../icons/Javascript.astro";
import React from "../icons/React.astro";
import PHP from "../icons/PHP.astro";
import NodeJS from "../icons/NodeJS.astro";
import Git from "../icons/Git.astro";
import AstroIcon from "../icons/Astro.astro";
import NextJS from "../icons/NextJS.astro";
import PostgreSQL from "../icons/PostgreSQL.astro";
import Tailwind from "../icons/Tailwind.astro";
import Prisma from "../icons/Prisma.astro";
import Typescript from "../icons/Typescript.astro";
---

<section>
	<h2 class="text-xl font-bold mb-8">Skills</h2>
	<div class="grid grid-cols-3 md:grid-cols-6 place-content-center-safe gap-8">
		<Skill name="Javascript">
			<Javascript slot="skill-icon" />
		</Skill>

		<Skill name="React">
			<React slot="skill-icon" />
		</Skill>

		<Skill name="NextJS">
			<NextJS slot="skill-icon" />
		</Skill>

		<Skill name="NodeJS">
			<NodeJS slot="skill-icon" />
		</Skill>

		<Skill name="Typescript">
			<Typescript slot="skill-icon" />
		</Skill>

		<Skill name="Git">
			<Git slot="skill-icon" />
		</Skill>

		<Skill name="PostgreSQL">
			<PostgreSQL slot="skill-icon" />
		</Skill>

		<Skill name="Prisma">
			<Prisma slot="skill-icon" />
		</Skill>

		<Skill name="Tailwind">
			<Tailwind slot="skill-icon" />
		</Skill>

		<Skill name="Astro">
			<AstroIcon slot="skill-icon" />
		</Skill>

		<Skill name="PHP">
			<PHP slot="skill-icon" />
		</Skill>

		<Skill name="HTML">
			<HTML slot="skill-icon" />
		</Skill>
	</div>
</section>
