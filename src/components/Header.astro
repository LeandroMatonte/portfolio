---
import ContactLinks from "./ContactLinks.astro";
import { Image } from "astro:assets";
import profileImage from "../img/profile.webp";
---

<header>
	<Image src={profileImage} alt="Leandro" quality={60} densities={[1, 2]} />
	<div class="info-container">
		<h1>Hola, soy Leandro</h1>
		<p>
			<span class="text-accent">Desarrollador web</span> con más de 4 años de experiencia creando soluciones centradas en
			el usuario.
		</p>
		<p class="mb-4">Apasionado por el aprendizaje continuo y los desafíos.</p>
		<ContactLinks showLabels={false} />
	</div>
</header>

<style>
	header {
		display: flex;
		flex-direction: column;
		align-items: center;

		gap: 1rem;

		padding-bottom: 2rem;
		margin-bottom: 2rem;

		& img {
			border-radius: 50%;
			width: 200px;
			height: 200px;
			margin-bottom: 1rem;
		}

		& p {
			margin-bottom: 0.5em;
			text-wrap: pretty;
		}

		& .info-container {
			width: 100%;
		}
	}

	header .mb-4 {
		margin-bottom: 1rem;
	}

	@media (min-width: 768px) {
		header {
			flex-direction: row;
			align-items: center;
			gap: 2rem;
		}
	}
</style>
