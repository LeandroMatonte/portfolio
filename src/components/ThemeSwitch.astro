---
import LightbulbIcon from "../icons/Lightbulb.astro";
---

<button type="button" id="themeToggle" aria-label="Botón para cambiar el tema de la página">
  <LightbulbIcon />
</button>

<style>
  #themeToggle {
    display: grid;
    place-content: center;
    font-size: 22px;
    padding: 0.5rem;
    border: 2px solid transparent;
    color: var(--color-light);
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.2s ease-in-out;
    background: none;
  }
</style>
