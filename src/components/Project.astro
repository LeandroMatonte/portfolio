---
import { Image } from "astro:assets";
import Badge from "./Badge.astro";
const { title, image, url, badges } = Astro.props;
import { ExternalLink } from "@lucide/astro";
---

<article>
	<Image src={image} alt={title} width={720} height={260} densities={[1, 2]} quality={90} />
	<h2>
		{
			url ? (
				<a href={url} target="_blank" rel="noopener noreferrer" aria-label={`Abrir ${title} en una nueva pestaÃ±a`}>
					<ExternalLink size={16}/> {title}
				</a>
			) : (
				title
			)
		}
	</h2>
	<div class="badges">
		{badges.map((badge) => <Badge title={badge.title} />)}
	</div>
	<p class="description">{Astro.props.description}</p>
</article>
<style>
	img {
		margin-bottom: 1rem;
		border-radius: 0.25rem;
		object-fit: cover;
	}

	a {
		text-decoration: none;
		color: var(--color-accent);
	}

	a:hover {
		text-decoration: underline;
		color: var(--color-accent-light);
	}

	h2 {
		font-size: 1.2rem;
		margin-bottom: 0.75rem;
	}

	.badges {
		display: flex;
		gap: 0.5rem;
		margin-bottom: 0.5rem;
	}

	.description {
		font-size: 1rem;
	}
</style>
